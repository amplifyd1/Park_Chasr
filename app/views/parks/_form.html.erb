<%= form_for @park do |f| %>
  <fieldset class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </fieldset>

  <h4>Enter either address or Longitude and Latitude Coordinates</h4>
  <fieldset class="form-group">
    <%= f.label :raw_address, 'Address' %>
    <%= f.text_field :raw_address, class: "form-control" %>
  </fieldset>
  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :latitude %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :latitude, class: "form-control" %>
    </div>
    <div class="col-sm-1">
      <%= f.label :longitude %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :longitude, class: "form-control" %>
    </div>
    <!-- <div class="col-sm-4">
      <a href="#" id="find-on-map" class="btn btn-info btn-sm">Find on the map</a>
    </div> -->
  </div>

  <%= f.submit 'Add Park', class: 'btn btn-primary' %>
<% end %>
